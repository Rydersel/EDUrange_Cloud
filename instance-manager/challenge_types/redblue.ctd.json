{
  "typeId": "redblue",
  "version": "1.0.0",
  "description": "Red-Blue challenge with multiple attackers and a shared defender",
  "podTemplate": {
    "containers": [
      {
        "name": "attack-container",
        "image": "registry.edurange.cloud/challenges/redblue-attack-base",
        "ports": [
          {
            "containerPort": 22,
            "name": "ssh",
            "protocol": "TCP"
          }
        ],
        "env": [
          {
            "name": "FLAG",
            "valueFrom": {
              "secretKeyRef": {
                "name": "{{FLAG_SECRET_NAME}}",
                "key": "flag"
              }
            }
          },
          {
            "name": "POD_IP",
            "value": "localhost"
          },
          {
            "name": "DEFENSE_CONTAINER_HOST",
            "value": "defense-service-{{COMPETITION_ID}}"
          },
          {
            "name": "DEFENSE_CONTAINER_PORT",
            "value": "4444"
          }
        ]
      },
      {
        "name": "webos",
        "image": "registry.edurange.cloud/edurange/webos",
        "ports": [
          {
            "containerPort": 3000,
            "name": "webos-http",
            "protocol": "TCP"
          }
        ],
        "env": [
          {"name": "NEXT_PUBLIC_POD_NAME", "value": "{{INSTANCE_NAME}}"},
          {"name": "NEXT_PUBLIC_APPS_CONFIG", "value": "{{APPS_CONFIG}}"},
          {"name": "NEXT_PUBLIC_CHALLENGE_POD_NAME", "value": "{{INSTANCE_NAME}}"},
          {"name": "NEXT_PUBLIC_CHALLENGE_API_URL", "value": "http://localhost:5000/execute"},
          {"name": "NEXT_PUBLIC_TERMINAL_URL", "value": "https://terminal-{{INSTANCE_NAME}}.{{DOMAIN}}"},
          {"name": "NEXT_PUBLIC_CHALLENGE_URL", "value": "https://{{INSTANCE_NAME}}.{{DOMAIN}}"},
          {"name": "NEXT_PUBLIC_DEFENSE_URL", "value": "https://defense-{{COMPETITION_ID}}.{{DOMAIN}}"},
          {"name": "DATABASE_API_URL", "value": "http://database-api-service.default.svc.cluster.local"},
          {"name": "INSTANCE_MANAGER_URL", "value": "http://instance-manager.default.svc.cluster.local/api"},
          {"name": "HOSTNAME", "value": "{{INSTANCE_NAME}}"},
          {"name": "DOMAIN_NAME", "value": "{{DOMAIN}}"},
          {"name": "NODE_ENV", "value": "production"},
          {"name": "FLAG_SECRET_NAME", "value": "{{FLAG_SECRET_NAME}}"}
        ]
      },
      {
        "name": "terminal",
        "image": "registry.edurange.cloud/edurange/terminal",
        "ports": [
          {
            "containerPort": 3001,
            "name": "terminal-http",
            "protocol": "TCP"
          }
        ],
        "env": [
          {"name": "CONTAINER_NAME", "value": "attack-container"},
          {"name": "POD_NAME", "value": "{{INSTANCE_NAME}}"},
          {"name": "KUBERNETES_HOST", "value": "{{KUBERNETES_HOST}}"},
          {"name": "KUBERNETES_NAMESPACE", "value": "default"},
          {"name": "KUBERNETES_SERVICE_ACCOUNT_TOKEN", "value": "{{KUBERNETES_TOKEN}}"}
        ]
      }
    ]
  },
  "services": [
    {
      "name": "service-{{INSTANCE_NAME}}",
      "ports": [
        {
          "port": 80,
          "targetPort": 3000,
          "name": "webos-http"
        },
        {
          "port": 3001,
          "targetPort": 3001,
          "name": "terminal-http"
        }
      ]
    }
  ],
  "ingress": [
    {
      "name": "ingress-{{INSTANCE_NAME}}",
      "annotations": {
        "nginx.ingress.kubernetes.io/use-regex": "true",
        "nginx.ingress.kubernetes.io/proxy-read-timeout": "3600",
        "nginx.ingress.kubernetes.io/proxy-send-timeout": "3600",
        "nginx.ingress.kubernetes.io/proxy-connect-timeout": "3600",
        "nginx.ingress.kubernetes.io/backend-protocol": "HTTP"
      },
      "rules": [
        {
          "host": "{{INSTANCE_NAME}}.{{DOMAIN}}",
          "http": {
            "paths": [
              {
                "path": "/",
                "pathType": "ImplementationSpecific",
                "backend": {
                  "service": {
                    "name": "service-{{INSTANCE_NAME}}",
                    "port": {
                      "number": 80
                    }
                  }
                }
              }
            ]
          }
        },
        {
          "host": "terminal-{{INSTANCE_NAME}}.{{DOMAIN}}",
          "http": {
            "paths": [
              {
                "path": "/",
                "pathType": "ImplementationSpecific",
                "backend": {
                  "service": {
                    "name": "service-{{INSTANCE_NAME}}",
                    "port": {
                      "number": 3001
                    }
                  }
                }
              }
            ]
          }
        }
      ],
      "tls": [
        {
          "hosts": [
            "{{INSTANCE_NAME}}.{{DOMAIN}}",
            "terminal-{{INSTANCE_NAME}}.{{DOMAIN}}"
          ],
          "secretName": "wildcard-domain-certificate-prod"
        }
      ]
    }
  ],
  "defenderTemplate": {
    "pod": {
      "name": "defense-{{COMPETITION_ID}}",
      "labels": {
        "app": "ctfchal",
        "role": "defender",
        "competition_id": "{{COMPETITION_ID}}",
        "challenge_type": "redblue"
      },
      "containers": [
        {
          "name": "defense-container",
          "image": "registry.edurange.cloud/challenges/redblue-defense-base",
          "ports": [
            {
              "containerPort": 22,
              "name": "ssh",
              "protocol": "TCP"
            },
            {
              "containerPort": 80,
              "name": "http",
              "protocol": "TCP"
            },
            {
              "containerPort": 4444,
              "name": "vuln-service",
              "protocol": "TCP"
            }
          ],
          "env": [
            {
              "name": "TARGET_FLAG",
              "valueFrom": {
                "secretKeyRef": {
                  "name": "{{FLAG_SECRET_NAME}}",
                  "key": "flag"
                }
              }
            },
            {
              "name": "COMPETITION_ID",
              "value": "{{COMPETITION_ID}}"
            }
          ]
        }
      ]
    },
    "service": {
      "name": "defense-service-{{COMPETITION_ID}}",
      "labels": {
        "app": "ctfchal",
        "role": "defender",
        "competition_id": "{{COMPETITION_ID}}",
        "challenge_type": "redblue"
      },
      "ports": [
        {
          "port": 22,
          "targetPort": 22,
          "name": "ssh"
        },
        {
          "port": 80,
          "targetPort": 80,
          "name": "http"
        },
        {
          "port": 4444,
          "targetPort": 4444,
          "name": "vuln-service"
        }
      ]
    },
    "ingress": {
      "name": "defender-ingress-{{COMPETITION_ID}}",
      "labels": {
        "app": "ctfchal",
        "role": "defender",
        "competition_id": "{{COMPETITION_ID}}",
        "challenge_type": "redblue"
      },
      "rules": [
        {
          "host": "defense-{{COMPETITION_ID}}.{{DOMAIN}}",
          "http": {
            "paths": [
              {
                "path": "/",
                "pathType": "ImplementationSpecific",
                "backend": {
                  "service": {
                    "name": "defense-service-{{COMPETITION_ID}}",
                    "port": {
                      "number": 80
                    }
                  }
                }
              }
            ]
          }
        }
      ],
      "tls": [
        {
          "hosts": [
            "defense-{{COMPETITION_ID}}.{{DOMAIN}}"
          ],
          "secretName": "wildcard-domain-certificate-prod"
        }
      ]
    }
  },
  "extensionPoints": {
    "attackImage": {
      "container": "attack-container",
      "property": "image",
      "default": "registry.edurange.cloud/challenges/redblue-defense-attack"
    },
    "defenseImage": {
      "container": "defense-container",
      "property": "image",
      "default": "registry.edurange.cloud/challenges/redblue-defense-base"
    },
    "appsConfig": {
      "container": "webos",
      "property": "env.NEXT_PUBLIC_APPS_CONFIG"
    }
  }
}
