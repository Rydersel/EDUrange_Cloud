    {
      "type": "question",
      "id": "q1_user_flag",
      "config": {
        "text": "What is the user flag?",
        "type": "flag",
        "points": 10,
        "answer": "CTF{user_access_achieved_check_sudo_permissions}",
        "order": 2
      }
    }
  ],
  "typeConfig": {
    "attackImage": "registry.edurange.cloud/challenges/redblue-test-attack",
    "defenseImage": "registry.edurange.cloud/challenges/redblue-test-defense",
