apiVersion: v1
kind: Secret
metadata:
  name: dashboard-secrets
type: Opaque
data:
  # These values need to be base64 encoded
  # Example: echo -n "your-value" | base64
  # IMPORTANT: Replace these placeholders with your actual base64-encoded values

  database-url: BASE64_ENCODED_DATABASE_URL
  nextauth-secret: BASE64_ENCODED_NEXTAUTH_SECRET
  github-client-id: BASE64_ENCODED_GITHUB_CLIENT_ID
  github-client-secret: BASE64_ENCODED_GITHUB_CLIENT_SECRET
